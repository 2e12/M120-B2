<Window x:Class="M120_B2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:M120_B2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Your name" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Width="160"/>
        <TextBox x:Name="nameInput" Grid.Column="1" Margin="10,10,10,0" TextWrapping="Wrap" Text="Peter" Height="26" VerticalAlignment="Top"/>
        <Button Content="What is my name?" Margin="10,41,10,0" VerticalAlignment="Top" Grid.Column="1" Height="26" Click="Button_Click" IsDefault="True"/>
        <Label Content="Actions" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,41,0,0" Width="160"/>
        <Label Content="Your name is" Margin="10,101,10,0" VerticalAlignment="Top"/>
        <Label x:Name="nameLabel" Content="Peter" Grid.Column="1" HorizontalAlignment="Left" Margin="10,101,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
